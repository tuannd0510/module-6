<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:layout_margin="10dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Device Information"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="30dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="OS Version:"
                android:textSize="20dp"
                android:gravity="left|center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Device Manufacturer:"
                android:textSize="20dp"
                android:gravity="left|center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Device Model:"
                android:textSize="20dp"
                android:gravity="left|center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Device Name:"
                android:textSize="20dp"
                android:gravity="left|center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Product Name:"
                android:textSize="20dp"
                android:gravity="left|center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Hardware Name:"
                android:textSize="20dp"
                android:gravity="left|center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="API version:"
                android:textSize="20dp"
                android:gravity="left|center"/>

        </LinearLayout>

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/osVersion"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textSize="20dp"
                android:gravity="left|center"/>
            <TextView
                android:id="@+id/deviceManufacturer"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textSize="20dp"
                android:gravity="left|center"/>
            <TextView
                android:id="@+id/deviceModel"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textSize="20dp"
                android:gravity="left|center"/>
            <TextView
                android:id="@+id/deviceName"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textSize="20dp"
                android:gravity="left|center"/>
            <TextView
                android:id="@+id/productName"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textSize="20dp"
                android:gravity="left|center"/>
            <TextView
                android:id="@+id/hardwareName"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textSize="20dp"
                android:gravity="left|center"/>
            <TextView
                android:id="@+id/apiVer"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textSize="20dp"
                android:gravity="left|center"/>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>